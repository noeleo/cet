<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Applied Innovations Institute &middot; </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "bootstrap-responsive" %>
  </head>

  <body>
    <div id="wrapper">
      
      <div id="header">
	<%= render "/navbar"%>
      </div>

      <div id="content">
	<br>
	<div class="row">
            <p class="text-info" style="font-size: 40pt; color: 0x000000">Edit Profile</p>
	</div>
	<hr class="featurette-divider">
	<div class="row">
	  
          <%= form_tag edit_profile_path(@user.id) do %>
	  
          <%= label :profile, :name, "Name:" %>
          <%= text_field :profile, 'name', :value => @user.name, :id => 'name' %>
	  
          <%= label :profile, :major, "Major:" %>
          <%= text_field :profile, 'major', :value => @user.major, :id => 'major' %>
	  
          <%= label :profile, :gradyear, "Graduation Year:" %>
          <%= text_field :profile, 'gradyear', :value => @user.gradyear, :id => 'gradyear' %>
	  
          <%= label :profile, :aboutme, "About Me:" %>
          <%= text_area :profile, 'aboutme', :value => @user.aboutme, :id => 'aboutme', :class => 'field span6', :rows => 7 %>
	  
	  <br>
          <%= submit_tag "Update Profile", {:class => "btn btn-primary btn-medium", :id => 'updateprofile' } %>
	  
          <% end %>
	</div>
	
	<hr class="featurette-divider">
	<div class = "row">
	  <%= form_for @user, :url => update_profile_picture_path(@user.id), :html => { :multipart => true } do |form| %>
	    <%= form.file_field :avatar %>
	    <%= submit_tag "Update Profile Picture", :class => "btn btn-primary" %>
	  <% end %>
	  <% if @user.avatar and @user.avatar.url != "/avatars/original/missing.png" %>
	    <%= button_to "Delete Profile Picture", destroy_profile_picture_path(@user.id), :class => "btn btn-danger", :confirm => "Are you sure?" %>
	  <% end %>
	</div>
	
      </div>

      <div id="footer">
	<%= render "/footer"%>
      </div>

    </div>
  </body>
</html>
