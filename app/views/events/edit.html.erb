<html>
  <head>
    <meta charset="utf-8">
    <title>Applied Innovations Institute &middot; </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "bootstrap-responsive" %>
  </head>

  <body>
    <div id="wrapper">

      <div id="header"> 
	<%= render "/navbar"%>
      </div>

      <div id="content">
	<div class = "row">
	  <div align = "center">
	    <h2>Edit Event</h2>
	  </div>
	</div>
	
	<hr class="featurette-divider">
	<br>

	<div class = "row">
	  <div align = "center">
	    <%= form_for @event, :url => update_event_path(@eid) do |f| %>
	    
	    <%= f.label :name, "Name:" %>
	    <%= f.text_area :name, :class => 'field span6', :id => 'name', :rows => 1, :value => @event.name %>
	    
	    <%= f.label :description, "Enter a short description:" %>
	    <%= f.text_area :description, :class => 'field span6', :id => 'description', :rows => 6, :value => @event.description %>
	    
	    <%= f.label :location, "Location:" %>
	    <%= f.text_area :location, :class => 'field span6', :id => 'location', :rows => 1, :value => @event.location %>
	    
	    <br><br>
	    From: <%= f.datetime_select :startTime, :prompt => {:hour => @event.startTime.hour, :minute => @event.startTime.min}, :ampm => true, :minute_step => 15 %>
	    
	    <br>
	    Until: <%= f.datetime_select :endTime, :prompt => {:hour => @event.endTime.hour, :minute => @event.endTime.min}, :ampm => true, :minute_step => 15 %>
	    
	    <br><br> 
	    <%= f.submit "Update Event", {:class => "btn btn-primary btn-medium" } %>
	    
	    <% end %>
	  </div>
	</div>
      </div>
      
      <div id="footer">
	<%= render "/footer"%>
      </div>

    </div>
  </body>
</html>
